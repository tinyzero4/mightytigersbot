{
  "name": "mightytigersbot",
  "version": "1.0.0",
  "description": "Bot for MightyTigers Team",
  "main": "index.js",
  "dependencies": {
    "mongodb": "^3.0.7",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "devDependencies": {
    "@types/mongodb": "^3.0.15",
    "@types/node": "^9.6.5",
    "telegraf": "github:telegraf/telegraf#feature/typings"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "serve-debug": "nodemon --inspect index.js",
    "up": "npm run build && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breedish/mightytigersbot.git"
  },
  "author": "breedish",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/breedish/mightytigersbot/issues"
  },
  "homepage": "https://github.com/breedish/mightytigersbot#readme"
}
