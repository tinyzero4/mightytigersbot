{
  "name": "mightytigersbot",
  "version": "1.0.0",
  "description": "Bot for MightyTigers Team",
  "main": "index.js",
  "dependencies": {
    "@types/mustache": "^0.8.30",
    "moment": "^2.22.1",
    "mongodb": "^3.0.7",
    "mustache": "^2.3.0",
    "npm": "^5.8.0",
    "telegraf": "^3.20.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/mongodb": "^3.0.15",
    "@types/node": "^9.6.5",
    "babel-preset-es2015": "^6.24.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/bot.js",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --no-cache --forceExit --coverage --verbose",
    "up": "rm -rf dist && npm run build && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breedish/mightytigersbot.git"
  },
  "author": "breedish",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/breedish/mightytigersbot/issues"
  },
  "homepage": "https://github.com/breedish/mightytigersbot#readme"
}
