{
  "name": "mightytigersbot",
  "version": "1.0.0",
  "description": "Bot for MightyTigers Team",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breedish/mightytigersbot.git"
  },
  "author": "breedish",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/breedish/mightytigersbot/issues"
  },
  "homepage": "https://github.com/breedish/mightytigersbot#readme",
  "_moduleAliases": {
    "@models": "models",
    "@services": "services",
    "@configs": "configs",
    "@db": "db"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build-ts && npm run test",
    "build-ts": "tsc && tslint -c tslint.json -p tsconfig.json",
    "test": "jest --no-cache --forceExit --coverage --verbose",
    "run-local": "DEBUG=local:a ts-node -r tsconfig-paths/register src/app-dev.ts",
    "run-local-express": "ts-node -r tsconfig-paths/register src/app.ts",
    "run-dist": "node ./app.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "dependencies": {
    "@types/mustache": "^0.8.30",
    "@types/shortid": "0.0.29",
    "aws-xray-sdk": "^1.2.0",
    "body-parser": "^1.18.3",
    "class-transformer": "^0.1.9",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "module-alias": "^2.0.6",
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.17",
    "mongodb": "^3.0.8",
    "npm": "^5.10.0",
    "reflect-metadata": "^0.1.12",
    "shortid": "^2.2.8",
    "telegraf": "^3.21.2",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/ejs": "^2.5.1",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.109",
    "@types/mongodb": "^3.0.19",
    "@types/node": "^9.6.20",
    "@types/uuid": "^3.4.3",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "jest": "^22.4.4",
    "ts-jest": "^22.4.6",
    "tsconfig-paths": "^3.3.2"
  }
}
