{
  "name": "mightytigersbot",
  "version": "1.0.0",
  "description": "Bot for MightyTigers Team",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breedish/mightytigersbot.git"
  },
  "author": "breedish",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/breedish/mightytigersbot/issues"
  },
  "homepage": "https://github.com/breedish/mightytigersbot#readme",
  "_moduleAliases": {
    "@models": "models",
    "@services": "services",
    "@configs": "configs",
    "@db": "db"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run-script clean && npm run build-ts && npm run-script test",
    "build-ts": "tsc && tslint -c tslint.json -p tsconfig.json",
    "test": "jest --no-cache --forceExit --coverage --verbose",

    "run-local": "ts-node -r tsconfig-paths/register src/app-dev.ts",
    
    "package": "npm run build && cp package.json dist/package.json && cp -R ./node_modules ./dist && cd dist && zip -r ./bot.zip ./* && cd ..",

    "run": "node ./app.js",
    "run-lambda": "node ./app-lambda.js"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  },
  "dependencies": {
    "@types/mustache": "^0.8.30",
    "@types/shortid": "0.0.29",
    "class-transformer": "^0.1.9",
    "ejs": "^2.5.9",
    "lodash": "^4.17.10",
    "module-alias": "^2.0.6",
    "moment": "^2.22.1",
    "moment-timezone": "^0.5.17",
    "mongodb": "^3.0.7",
    "npm": "^5.8.0",
    "reflect-metadata": "^0.1.12",
    "shortid": "^2.2.8",
    "telegraf": "^3.20.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/ejs": "^2.5.1",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "@types/mongodb": "^3.0.15",
    "@types/node": "^9.6.5",
    "@types/uuid": "^3.4.3",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.4",
    "tsconfig-paths": "^3.3.2"
  }
}
